<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="signalr/hubs"></script>
    <!-- Bing Maps -->
    <script type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0&mkt=en-gb"></script>
    <link rel="stylesheet" href="http://github.hubspot.com/odometer/themes/odometer-theme-car.css" />
    <script src="http://github.hubspot.com/odometer/odometer.js"></script>
    <!-- Spatial Dashboard JavaScript -->
    <script src="~/Scripts/twitterStream.js" type="text/javascript"></script>
    <script src="~/Scripts/twitterHubClient.js" type="text/javascript"></script>
</head>
<body onload="initialize()">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <div class="row">
                    <ul class="nav navbar-nav col-lg-12">
                        <p class="navbar-text navbar-right">Diseñado por <a href="#" class="navbar-link">AlertaEC</a></p>
                        <li role="presentation" class="active"><a href="#">Analisis</a></li>
                        <li role="presentation"><a href="#">HBase</a></li>
                        <li class="col-lg-3">
                            <div class="navbar-form">
                                <div class="row">
                                    <div class="form-group col-sm-8">
                                        <input id="searchbox" type="search" class="form-control" placeholder="Buscar" />
                                    </div>
                                    <div class="form-group col-sm-2 col-sm-pull-1">
                                        <div class="row">
                                            <div class="col-sm-12 col-sm-pull-1">
                                                <button type="button" id="searchBtn" class="btn btn-primary">Ir</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="col-lg-4">
                            <div class="navbar-form">
                                <div class="btn-group" data-toggle="buttons-radio">
                                    <button type="button" id="positiveBtn" class="btn btn-primary">Positivo</button>
                                    <button type="button" id="neutralBtn" class="btn btn-primary">Neutro</button>
                                    <button type="button" id="negativeBtn" class="btn btn-primary">Negativo</button>
                                </div>
                            </div>
                        </li>
                        <li class="col-lg-pull-1"><span id="statustext" class="navbar-text"></span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="map_container">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>